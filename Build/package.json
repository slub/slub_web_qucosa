  "dependencies": {
    "@babel/preset-env": "^7.12.11",
    "@eureka2/ab-datepicker": "github:eureka2/ab-datepicker",
    "autoprefixer": "^10.4.0",
    "awesomplete": "^1.1.5",
    "bootstrap": "^5.3.5",
    "cssnano": "^7.0.6",
    "jquery": "^3.5.1",
    "less": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.13.0",
    "popper.js": "^1.16.1",
